<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#222222">

    <Button
        android:id="@+id/delete"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:maxWidth="55dp"
        android:layout_alignTop="@+id/resultTextView"
        android:layout_alignParentStart="true"
        android:layout_marginTop="5dp"
        android:layout_marginStart="5dp"
        android:onClick="onDelete"
        app:backgroundTint="@null"
        android:background="@drawable/rounded_orange_button"
        android:text="AC"
        tools:ignore="SpeakableTextPresentCheck" />
    <EditText
        android:id="@+id/resultTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="130dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:gravity="end"
        android:textSize="24sp"
        android:textColor="@color/black"
        android:text="0"
        android:background="@drawable/textfield"
        android:paddingRight="16dp"
        android:paddingLeft="16dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/resultTextView"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button7"
                android:layout_width="0dp"
                android:layout_height="64dp"
                android:layout_weight="1"
                android:text="7"
                android:layout_margin="5dp"
               android:gravity="center"
                android:textSize="24sp"
                android:textColor="#FFFFFF"
                app:backgroundTint="@null"
                android:background="@drawable/rounded_button"
                android:stateListAnimator="@null"/>

            <Button
                android:id="@+id/button8"
                android:layout_width="0dp"
                android:layout_height="64dp"
                android:layout_weight="1"
                android:text="8"
                android:gravity="center"
                app:backgroundTint="@null"
                android:layout_margin="5dp"
                android:textSize="24sp"
                android:textColor="#FFFFFF"
                android:background="@drawable/rounded_button"
                android:stateListAnimator="@null"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="64dp"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:id="@+id/button9"
                android:text="9"
                android:gravity="center"
                app:backgroundTint="@null"
                android:textSize="24sp"
                android:textColor="#FFFFFF"
                android:background="@drawable/rounded_button"
                android:stateListAnimator="@null"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="64dp"
                android:layout_weight="1"
                android:id="@+id/button10"
                android:text="รท"
                android:layout_margin="5dp"
                android:gravity="center"
                app:backgroundTint="@null"
                android:textSize="24sp"
                android:textColor="#FFFFFF"
                android:background="@drawable/rounded_orange_button"
                android:stateListAnimator="@null"/>

        </LinearLayout>

        <!-- Repeat the above LinearLayout for the remaining rows of buttons -->

        <!-- Second Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:layout_width="0dp"
                android:layout_height="64dp"
                android:layout_weight="1"
                android:id="@+id/button4"

                android:text="4"
                android:layout_margin="5dp"
                android:gravity="center"
                app:backgroundTint="@null"
                android:textSize="24sp"
                android:textColor="#FFFFFF"

                android:background="@drawable/rounded_button"
                android:stateListAnimator="@null"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="64dp"
                android:layout_weight="1"
                android:id="@+id/button5"

                android:text="5"
                android:layout_margin="5dp"
                android:gravity="center"
                app:backgroundTint="@null"
                android:textSize="24sp"
                android:textColor="#FFFFFF"
                android:background="@drawable/rounded_button"
                android:stateListAnimator="@null"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="64dp"
                android:layout_weight="1"
                android:id="@+id/button6"

                android:text="6"
                android:layout_margin="5dp"
                android:gravity="center"
                app:backgroundTint="@null"
                android:textSize="24sp"
                android:textColor="#FFFFFF"
                android:background="@drawable/rounded_button"
                android:stateListAnimator="@null"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="64dp"
                android:layout_weight="1"
                android:id="@+id/button11"

                android:text="ร"
                android:gravity="center"
                app:backgroundTint="@null"
                android:layout_margin="5dp"
                android:textSize="24sp"
                android:textColor="#FFFFFF"
                android:background="@drawable/rounded_orange_button"
                android:stateListAnimator="@null"/>


        </LinearLayout>

        <!-- Third Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:layout_width="0dp"
                android:layout_height="64dp"
                android:layout_weight="1"
                android:id="@+id/button1"

                android:text="1"
                android:layout_margin="5dp"
                android:gravity="center"
                app:backgroundTint="@null"
                android:textSize="24sp"
                android:textColor="#FFFFFF"
                android:background="@drawable/rounded_button"
                android:stateListAnimator="@null"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="64dp"
                android:layout_weight="1"
                android:text="2"
                android:id="@+id/button2"

                android:layout_margin="5dp"
                android:gravity="center"
                app:backgroundTint="@null"
                android:textSize="24sp"
                android:textColor="#FFFFFF"
                android:background="@drawable/rounded_button"
                android:stateListAnimator="@null"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="64dp"
                android:layout_weight="1"
                android:text="3"
                android:id="@+id/button3"

                android:layout_margin="5dp"
                android:gravity="center"
                app:backgroundTint="@null"
                android:textSize="24sp"
                android:textColor="#FFFFFF"
                android:background="@drawable/rounded_button"
                android:stateListAnimator="@null"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="64dp"
                android:layout_weight="1"
                android:text="-"
                android:id="@+id/button12"

                android:layout_margin="5dp"
                android:gravity="center"
                app:backgroundTint="@null"
                android:textSize="24sp"
                android:textColor="#FFFFFF"
                android:background="@drawable/rounded_orange_button"
                android:stateListAnimator="@null"/>

        </LinearLayout>

        <!-- Fourth Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:layout_width="0dp"
                android:layout_height="64dp"
                android:layout_weight="1"
                android:text="0"
                android:id="@+id/button0"

                android:layout_margin="5dp"
                android:gravity="center"
                app:backgroundTint="@null"
                android:textSize="24sp"
                android:textColor="#FFFFFF"
                android:background="@drawable/rounded_button"
                android:stateListAnimator="@null"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="64dp"
                android:layout_weight="1"
                android:text="."
                android:id="@+id/button13"

                android:layout_margin="5dp"
                android:gravity="center"
                app:backgroundTint="@null"
                android:textSize="24sp"
                android:textColor="#FFFFFF"
                android:background="@drawable/rounded_button"
                android:stateListAnimator="@null"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="64dp"
                android:layout_weight="1"
                android:text="="
                android:id="@+id/solve"
                android:onClick="onSolve"
                android:layout_margin="5dp"
                android:gravity="center"
                android:textSize="24sp"
                android:textColor="#FFFFFF"
                app:backgroundTint="@null"
                android:background="@drawable/rounded_orange_button"
                android:stateListAnimator="@null"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="64dp"
                android:layout_weight="1"
                android:text="+"
                android:id="@+id/button15"

                android:layout_margin="5dp"
                android:gravity="center"
                app:backgroundTint="@null"
                android:textSize="24sp"
                android:textColor="#FFFFFF"
                android:background="@drawable/rounded_orange_button"
                android:stateListAnimator="@null"/>

        </LinearLayout>

        <!-- Fifth Row for Variables X, Y, and Z -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:layout_width="0dp"
                android:layout_height="64dp"
                android:layout_weight="1"
                android:id="@+id/button16"

                android:text="x"
                android:layout_margin="7dp"
                android:gravity="center"
                app:backgroundTint="@null"
                android:textSize="24sp"
                android:textColor="#FFFFFF"
                android:background="@drawable/rounded_button"
                android:stateListAnimator="@null"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="64dp"
                android:layout_weight="1"
                android:id="@+id/button18"

                android:text="y"
                android:layout_margin="7dp"
                android:gravity="center"
                app:backgroundTint="@null"
                android:textSize="24sp"
                android:textColor="#FFFFFF"
                android:background="@drawable/rounded_button"
                android:stateListAnimator="@null"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="64dp"
                android:layout_weight="1"
                android:id="@+id/button17"

                android:text="z"
                android:layout_margin="7dp"
                android:gravity="center"
                app:backgroundTint="@null"
                android:textSize="24sp"
                android:textColor="#FFFFFF"
                android:background="@drawable/rounded_button"
                android:stateListAnimator="@null"/>
            <ImageButton
                android:layout_width="0dp"
                android:layout_height="64dp"
                android:layout_weight="1"
                android:id="@+id/takeImage"
                android:layout_margin="7dp"
                app:backgroundTint="@null"
                android:src="@drawable/baseline_camera_alt_24"
                android:background="@drawable/rounded_orange_button"
                android:scaleType="fitCenter"
                android:padding="8dp"
                android:contentDescription="Icon"
                android:stateListAnimator="@null" />


        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <Button

            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_margin="7dp"
            android:id="@+id/uploadImage"

            android:text="upload"
            android:textSize="17dp"
            android:gravity="center"
            app:backgroundTint="@null"

            android:textColor="@color/white"
            android:drawableTop="@drawable/baseline_upload_24"
            android:background="@drawable/rounded_orange_button"
            android:scaleType="fitCenter"
            android:padding="8dp"
            android:contentDescription="Icon"
            android:stateListAnimator="@null" />

        <ImageView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:id="@+id/equationImage"
            android:src="@drawable/logo" />
    </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="50dp"
        android:gravity="center"
        >

        <ProgressBar
            android:id="@+id/progressBar1"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:visibility="gone"
            android:layout_height="wrap_content"

            />
    </RelativeLayout>
</RelativeLayout>
</ScrollView>
